<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A4F8E3C2"
    android:padding="16dp"
    tools:context=".ItemDetail">

    <ImageView
        android:id="@+id/imageTv2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/titleTv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageTv2"
        android:layout_marginTop="5dp"
        android:text="Title"
        android:textColor="#000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/descriptionTv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTv2"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="50sp"
        android:justificationMode="inter_word"
        android:text="Description"
        android:textColor="#fdb501"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/descriptionTv2"
        android:text="Price: 10$ X "
        android:textColor="#fdb501"
        android:textSize="20sp"></TextView>

    <Spinner
        android:id="@+id/qtySpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/descriptionTv2"
        android:layout_marginLeft="20sp"
        android:layout_toRightOf="@id/price"
        android:spinnerMode="dropdown"

        />

    <!-- <EditText
        android:id="@+id/edtAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="20sp"
        android:hint="Enter Quantity"
        android:inputType="number"
        android:layout_below="@id/price"
        /> -->

    <TextView
        android:id="@+id/amountTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10sp"
        android:layout_toLeftOf="@+id/btnPay"
        android:background="@drawable/back"
        android:hint="Amount"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnPay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="Pay"
        android:textSize="20sp" />

</RelativeLayout>